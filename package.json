{
  "name": "tlauth",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "start:dev": "cross-env NODE_ENV=development node dist/main.js",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/main.ts",
    "migrate:up": "cross-env NODE_ENV=development node migrate-runner.js up",
    "migrate:create": "cross-env NODE_ENV=development node migrate-runner.js create",
    "migrate:down": "cross-env NODE_ENV=development node migrate-runner.js down",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix"
  },
  "keywords": [
    "authentication",
    "rbac",
    "access-control",
    "express",
    "postgresql",
    "multi-tenant",
    "saas",
    "user-management",
    "auth-system",
    "nodejs",
    "jwt",
    "authorization"
  ],
  "author": "Luciano Zangeronimo - <zangeronimo@gmail.com>",
  "license": "MIT",
  "description": "Multi-tenant authentication and access control system using Express and PostgreSQL, with RBAC support across multiple systems and clients.",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/express": "^5.0.3",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "node-pg-migrate": "^8.0.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg-promise": "^11.15.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0"
  }
}
